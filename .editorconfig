root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_size = 2

[*.{yml,yaml,json,toml}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
